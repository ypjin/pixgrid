</head>
<body>
  <% if(req.session.flash && req.session.flash.msg){ %>
    <div id="flash"><%= req.session.flash.msg %></div>
  <% } %>
  <% if(req.session.user){ %>
    <nav id="tnav">
      <div class="ns">
        <div class="tnl"><a href="/">PixGrid</a></div>
        <!-- <div class="tnc"><span>+ New Album</span></div> -->
        <div class="tnr">
          <div id="un">
            <% if(req.session.user.photo){ %>
              <img src="<%= req.session.user.photo.urls.thumb_100 %>" alt="<%= req.session.user.name %>" height="20px">
            <% }else{ %>
              <img src="/images/user.png" alt="<%= req.session.user.name %>" height="20px">
            <% } %>
            <span style="display:inline-block;margin:0 0 0 9px;"><%=: req.session.user.name | truncate:12 %></span>
            <div id="ud">
              <!-- <span><%= req.session.user.email %></span> -->
              <a href="/signout" id="signout">Sign Out</a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  <% } %>
  <div class="ns">
    <%- body %>
    <div style="clear:both;"></div>
  </div>
  <footer>
    <div class="ns">Â© 2008-2012 appcelerator inc. all rights reserved. appcelerator is a registered trademark.</div>
  </footer>
  <script src="js/plugins.js"></script>
  <script src="js/main.js"></script>
  <script type="text/javascript">
    $(function(){
      if($("#flash").length > 0){
        setTimeout(function(){$("#flash").fadeOut()},3000);
      }
      <% if(req && req.params && req.params.flash ){ %>$("input[name='un']").focus();<% } %>
    });
  </script>
